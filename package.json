{
  "name": "@meltwater/makenew-node-lib",
  "version": "1.5.1",
  "description": "npm package skeleton for Meltwater Node.js libraries.",
  "main": "./dist/index.js",
  "module": "./index.js",
  "keywords": [
    "meltwater",
    "node"
  ],
  "homepage": "https://github.com/meltwater/makenew-node-lib",
  "bugs": "https://github.com/meltwater/makenew-node-lib/issues",
  "repository": "meltwater/makenew-node-lib",
  "license": "SEE LICENSE IN LICENSE.txt",
  "author": {
    "name": "Evan Sosenko",
    "email": "evan.sosenko@meltwater.com"
  },
  "files": [
    "yarn.lock",
    "index.js",
    "lib",
    "examples",
    "coverage",
    "dist",
    "docs"
  ],
  "scripts": {
    "test": "nyc ava",
    "pretest": "gulp lint",
    "clean": "del dist",
    "build": "npm-run-all --parallel build:*",
    "prebuild": "yarn run clean",
    "build:index": "babel --source-maps --out-dir ./dist ./index.js",
    "build:lib": "babel --source-maps --ignore='*.spec.js' --out-dir ./dist/lib ./lib",
    "build:examples": "babel --source-maps --out-dir ./dist/examples ./examples",
    "dist": "yarn run build",
    "predist": "yarn test",
    "package": "npm pack",
    "prepackage": "yarn run dist",
    "preversion": "yarn run dist",
    "postversion": "git push && git push --tags",
    "example": "babel-node examples",
    "example:inspect": "babel-node --inspect examples",
    "format": "standard --fix",
    "report": "nyc report",
    "ava:inspect": "node --inspect node_modules/ava/profile",
    "watch": "gulp watch",
    "watch:test": "ava --watch"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "stage-3"
    ]
  },
  "ava": {
    "files": [
      "**/*.spec.js",
      "!dist/**/*"
    ],
    "require": [
      "babel-register"
    ],
    "babel": {
      "babelrc": true,
      "sourceMaps": "inline"
    }
  },
  "nyc": {
    "exclude": [
      "**/index.js",
      "dist/**/*.js",
      "examples/**/*.js",
      "**/*.spec.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "engines": {
    "node": ">=6.9.5"
  },
  "dependencies": {
    "@meltwater/mlabs-logger": "^2.0.0",
    "camelcase": "^4.1.0",
    "param-case": "^2.1.1"
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-cli": "^6.18.0",
    "babel-preset-env": "^1.1.4",
    "babel-preset-stage-3": "^6.17.0",
    "bunyan": "^1.8.10",
    "del-cli": "^1.0.0",
    "gulp": "^3.9.1",
    "gulp-cli": "^1.2.2",
    "gulp-jsonlint": "^1.1.2",
    "gulp-load-plugins": "^1.4.0",
    "gulp-plumber": "^1.1.0",
    "gulp-standard": "^10.0.0",
    "gulp-watch": "^4.3.10",
    "gulplog": "^1.0.0",
    "npm-run-all": "^4.0.0",
    "nyc": "^11.0.2",
    "source-map-support": "^0.4.15",
    "standard": "^10.0.2"
  }
}
