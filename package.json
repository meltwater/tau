{
  "name": "@meltwater/tau",
  "version": "1.4.0",
  "description": "Functional time and date tools for JavaScript inspired by Luxon.",
  "main": "dist/index.js",
  "module": "index.js",
  "sideEffects": false,
  "keywords": [
    "meltwater",
    "luxon",
    "node"
  ],
  "homepage": "https://github.com/meltwater/tau",
  "bugs": "https://github.com/meltwater/tau/issues",
  "repository": "meltwater/tau",
  "license": "SEE LICENSE IN LICENSE.txt",
  "author": {
    "name": "Evan Sosenko",
    "email": "evan.sosenko@meltwater.com"
  },
  "files": [
    "yarn.lock",
    "index.js",
    "lib",
    "data",
    "dist"
  ],
  "scripts": {
    "test": "nyc ava",
    "pretest": "npm-run-all lint",
    "test:update": "ava --update-snapshots",
    "test:watch": "ava --watch",
    "test:inspect": "node --inspect node_modules/ava/profile",
    "test:inspect:watch": "nodemon --inspect node_modules/ava/profile",
    "lint": "gulp lint",
    "clean": "del dist docs",
    "build": "npm-run-all --parallel build:*",
    "prebuild": "npm-run-all clean",
    "build:index": "babel --source-maps --out-dir dist index.js",
    "build:lib": "babel --source-maps --ignore='**/*.spec.js' --out-dir dist/lib lib",
    "build:docs": "jsdoc -c jsdoc.json",
    "dist": "npm-run-all build",
    "predist": "npm-run-all test",
    "preversion": "npm-run-all dist",
    "postversion": "git push && git push --tags",
    "publish:docs": "gulp docs",
    "example": "babel-node examples",
    "example:watch": "nodemon --exec babel-node examples",
    "example:inspect": "babel-node --inspect examples",
    "example:inspect:watch": "nodemon --exec babel-node --inspect examples",
    "watch": "gulp watch",
    "format": "standard --fix",
    "report": "nyc report"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "ava": {
    "files": [
      "**/*.spec.js",
      "!dist/**/*",
      "!package/**/*"
    ],
    "require": [
      "@babel/register"
    ]
  },
  "nyc": {
    "exclude": [
      "**/index.js",
      "dist/**/*.js",
      "docs/**/*.js",
      "package/**/*.js",
      "examples/**/*.js",
      "**/*.spec.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.spec.js",
      "test/",
      "tmp/"
    ]
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "dependencies": {
    "luxon": "~1.8.2",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.1",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@meltwater/examplr": "^4.2.0",
    "ava": "^1.0.1",
    "del-cli": "^1.0.0",
    "docdash": "^1.0.0",
    "gh-pages": "^2.0.0",
    "gulp": "^4.0.0",
    "gulp-cli": "^2.0.0",
    "gulp-jsonlint": "^1.1.2",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^1.0.0",
    "gulp-standard": "^12.0.0",
    "gulp-watch": "^5.0.0",
    "gulplog": "^1.0.0",
    "jsdoc": "^3.5.5",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^13.0.1",
    "standard": "^12.0.1"
  }
}
