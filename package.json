{
  "name": "@meltwater/tau",
  "version": "2.0.0-rc.0",
  "description": "Functional time and date tools for JavaScript inspired by Luxon.",
  "type": "module",
  "main": "dist/index.cjs",
  "exports": {
    "import": "./index.js",
    "require": "./dist/index.cjs"
  },
  "module": "index.js",
  "sideEffects": false,
  "keywords": [
    "meltwater",
    "luxon",
    "node"
  ],
  "homepage": "https://github.com/meltwater/tau",
  "bugs": "https://github.com/meltwater/tau/issues",
  "repository": "meltwater/tau",
  "license": "MIT",
  "author": {
    "name": "Evan Sosenko",
    "email": "evan.sosenko@meltwater.com"
  },
  "files": [
    "yarn.lock",
    "index.js",
    "lib",
    "data",
    "dist"
  ],
  "scripts": {
    "test": "nyc ava",
    "pretest": "npm-run-all lint",
    "test:update": "ava --update-snapshots",
    "test:watch": "ava --watch",
    "test:inspect": "node --inspect node_modules/ava/profile",
    "test:inspect:watch": "nodemon --inspect node_modules/ava/profile",
    "lint": "gulp lint",
    "clean": "del dist docs",
    "build": "npm-run-all --parallel build:*",
    "prebuild": "npm-run-all clean",
    "build:index": "babel --source-maps --out-file-extension .cjs --out-dir dist index.js",
    "build:lib": "babel --source-maps --ignore='**/*.spec.js' --out-file-extension .cjs --out-dir dist/lib lib",
    "build:docs": "jsdoc -c jsdoc.json",
    "dist": "npm-run-all build",
    "predist": "npm-run-all test",
    "preversion": "npm-run-all dist",
    "postversion": "git push && git push --tags",
    "publish:docs": "gulp docs",
    "example": "node examples",
    "example:watch": "nodemon examples",
    "example:inspect": "node --inspect examples",
    "example:inspect:watch": "nodemon --inspect examples",
    "watch": "gulp watch",
    "pretty": "prettier --ignore-path .gitignore --write '**/*.(js|json|graphql)'",
    "format": "npm-run-all --serial pretty format:*",
    "format:js": "standard --fix",
    "report": "nyc report"
  },
  "babel": {
    "plugins": [
      [
        "babel-plugin-add-import-extension",
        {
          "extension": "cjs",
          "replace": true
        }
      ]
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "ava": {
    "files": [
      "**/*.spec.js",
      "!dist/**/*",
      "!package/**/*"
    ]
  },
  "nyc": {
    "exclude": [
      "**/index.js",
      "dist/**/*.js",
      "docs/**/*.js",
      "package/**/*.js",
      "examples/**/*.js",
      "**/*.spec.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.spec.js",
      "test/",
      "tmp/"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "none",
    "endOfLine": "lf"
  },
  "engines": {
    "node": ">=12.13.0"
  },
  "resolutions": {
    "eslint": "^7.12.1",
    "standard": "^16.0.2"
  },
  "dependencies": {
    "luxon": "~1.25.0",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.1",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@meltwater/examplr": "^6.0.0",
    "ava": "^3.3.0",
    "babel-plugin-add-import-extension": "^1.4.3",
    "del-cli": "^3.0.0",
    "docdash": "^1.0.0",
    "eslint": "^7.12.1",
    "gh-pages": "^3.0.0",
    "gulp": "^4.0.0",
    "gulp-cli": "^2.0.0",
    "gulp-jsonlint": "^1.1.2",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-standard": "^14.0.0",
    "gulp-watch": "^5.0.0",
    "gulplog": "^1.0.0",
    "jsdoc": "^3.5.5",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^15.0.0",
    "prettier": "^2.0.1",
    "standard": "^16.0.2"
  }
}
