{
  "name": "@meltwater/makenew-node-lib",
  "version": "4.2.0",
  "description": "npm package skeleton for Meltwater Node.js libraries.",
  "main": "dist/index.js",
  "module": "index.js",
  "keywords": [
    "meltwater",
    "node"
  ],
  "homepage": "https://github.com/meltwater/makenew-node-lib",
  "bugs": "https://github.com/meltwater/makenew-node-lib/issues",
  "repository": "meltwater/makenew-node-lib",
  "license": "SEE LICENSE IN LICENSE.txt",
  "author": {
    "name": "Evan Sosenko",
    "email": "evan.sosenko@meltwater.com"
  },
  "files": [
    "yarn.lock",
    "index.js",
    "lib",
    "data",
    "dist",
    "docs"
  ],
  "scripts": {
    "test": "nyc ava",
    "pretest": "gulp lint",
    "clean": "del dist",
    "build": "npm-run-all --parallel build:*",
    "prebuild": "yarn run clean",
    "build:index": "babel --source-maps --out-dir dist index.js",
    "build:lib": "babel --source-maps --ignore='*.spec.js' --out-dir dist/lib lib",
    "dist": "yarn run build",
    "predist": "yarn test",
    "preversion": "yarn run dist",
    "postversion": "git push && git push --tags",
    "example": "babel-node examples",
    "example:watch": "babel-watch --watch examples/local.json examples",
    "example:inspect": "babel-node --inspect examples",
    "example:inspect:watch": "nodemon node_modules/.bin/babel-node --inspect examples",
    "ava:inspect": "node --inspect node_modules/ava/profile",
    "ava:inspect:watch": "nodemon --inspect node_modules/ava/profile",
    "watch": "gulp watch",
    "watch:test": "ava --watch",
    "format": "standard --fix",
    "report": "nyc report"
  },
  "babel": {
    "plugins": [
      "transform-object-rest-spread"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "ava": {
    "files": [
      "**/*.spec.js",
      "!dist/**/*",
      "!package/**/*"
    ],
    "require": [
      "babel-register"
    ],
    "babel": {
      "babelrc": true,
      "sourceMaps": "inline"
    }
  },
  "nyc": {
    "exclude": [
      "**/index.js",
      "dist/**/*.js",
      "package/**/*.js",
      "examples/**/*.js",
      "**/*.spec.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@meltwater/examplr": "^4.0.1",
    "ava": "^0.25.0",
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.1.4",
    "babel-watch": "^2.0.7",
    "del-cli": "^1.0.0",
    "gulp": "^3.9.1",
    "gulp-cli": "^2.0.0",
    "gulp-jsonlint": "^1.1.2",
    "gulp-load-plugins": "^1.4.0",
    "gulp-plumber": "^1.1.0",
    "gulp-standard": "^10.0.0",
    "gulp-watch": "^5.0.0",
    "gulplog": "^1.0.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.0.2",
    "standard": "^10.0.2"
  }
}
